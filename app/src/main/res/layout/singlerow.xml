<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shop_nameTxt"
            android:text="Shop Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:fontFamily="@font/nunito"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prod_nameTxt"
            android:text="Product Name"
            android:textSize="25sp"
            android:textColor="#000"
            android:fontFamily="@font/nunito"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@+id/shop_nameTxt"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceTxt"
            android:text="Rs."
            android:textSize="25sp"
            android:fontFamily="@font/nunito"
            android:textColor="#7EFA2F"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/shop_nameTxt"
            android:layout_marginLeft="10dp"/>

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested"
            android:outlineAmbientShadowColor="#9AEC66"
            android:textColor="#11E167"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/priceTxt"
            android:layout_alignParentEnd="true"
            android:id="@+id/interestedBtn"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_alignBottom="@id/interestedBtn"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>